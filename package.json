{
  "name": "rebalancer",
  "version": "1.0.0",
  "description": "Portfolio Rebalancer",
  "main": "index.js",
  "author": "wslyvh",
  "license": "MIT",
  "homepage": "https://github.com/wslyvh/rebalancer#readme",
  "scripts": {
    "test": "jest --coverage --verbose --detectOpenHandles --forceExit",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "nodemon --exec ts-node -- index.ts",
    "ts-node": "ts-node index.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wslyvh/rebalancer.git"
  },
  "bugs": {
    "url": "https://github.com/wslyvh/rebalancer/issues"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "clearMocks": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "binance-api-node": "^0.8.5",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "core-js": "^2.5.7",
    "dotenv": "^6.0.0",
    "inquirer": "^6.2.0",
    "ora": "^3.0.0",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "@types/core-js": "^2.5.0",
    "@types/dotenv": "^4.0.3",
    "@types/inquirer": "0.0.43",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/ora": "^1.3.4",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
